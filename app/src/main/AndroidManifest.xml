<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="place.pic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/placepic_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/placepic_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="@bool/FIREBASE_CRASHLYTICS_COLLECTION_ENABLED" />

        <activity android:name=".ui.main.home.banner.BannerListActivity" />
        <activity android:name=".ui.main.home.banner.detail.BannerDetailActivity" />
        <activity android:name=".ui.main.mypage.ProfileEditActivity" />
        <activity android:name=".ui.main.mypage.MyPageSettingActivity"/>
        <activity android:name=".ui.main.mypage.GroupChangeActivity" />
        <activity android:name=".ui.main.BaseActivity" />
        <activity android:name=".ui.main.detail.liker.LikerUserListActivity" />
        <activity android:name=".ui.main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.search.place.PlaceSearchActivity" />
        <activity android:name=".ui.upload.UploadPlaceActivity" />
        <activity
            android:name=".ui.group.InputUserInfoAnimActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.group.InputVisitCodeActivity" />
        <activity android:name=".ui.main.detail.DetailViewActivity" />
        <activity android:name=".ui.tag.UsefulTagActivity" />
        <activity android:name=".ui.search.subway.SubwaySearchActivity" />
        <activity android:name=".ui.tag.KeywordTagActivity" />
        <activity android:name=".ui.group.GroupListActivity" />
        <activity android:name=".ui.webview.InWebActivity" />
        <activity android:name=".ui.main.OnBoardingActivity" />
    </application>

</manifest>