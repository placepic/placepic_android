<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignupActivity">


    <!--회원가입 상단 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_sign_top_bar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/back_arrow_ic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sign_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="회원가입"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_sign_top_bar_back_btn"
            app:layout_constraintStart_toEndOf="@+id/img_sign_top_bar_back_btn"
            app:layout_constraintTop_toTopOf="@+id/img_sign_top_bar_back_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--이메일 입력 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_email_view_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign_top_bar"
        app:layout_constraintStart_toStartOf="@id/cl_sign_top_bar"
        app:layout_constraintEnd_toEndOf="@id/cl_sign_top_bar"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_sign_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="이메일"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_sign_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress"
            android:paddingVertical="8dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="14dp"
            android:background="@color/selector_edittext_in_login_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_email"
            tools:layout_editor_absoluteX="16dp"/>

        <TextView
            android:id="@+id/tv_sign_non_email"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_sign_email"
            android:text="알맞은 이메일 형식이 아닙니다."
            android:textSize="11dp"
            android:textColor="@color/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--비밀번호 입력 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_password_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cl_sign_email_view_group"
        app:layout_constraintStart_toStartOf="@id/cl_sign_email_view_group"
        app:layout_constraintEnd_toEndOf="@id/cl_sign_email_view_group"
        >

        <TextView
            android:id="@+id/tv_sign_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="비밀번호"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_sign_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:padding="12dp"
            android:paddingVertical="8dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="15dp"
            android:background="@color/selector_edittext_in_login_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_password"
            tools:layout_editor_absoluteX="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_password_ok_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign_password_view_group">

        <TextView
            android:id="@+id/tv_sign_ok_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="비밀번호 확인"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_sign_ok_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:background="@color/selector_edittext_in_login_view"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:padding="12dp"
            android:paddingVertical="8dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_ok_password"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/tv_sign_non_password"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_sign_ok_password"
            android:text="비밀번호가 일치하지 않습니다. 다시 확인해보세요."
            android:textSize="11dp"
            android:textColor="@color/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_signnup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="26dp"
        android:padding="13dp"
        android:background="@drawable/round_rectangle_gray_8dp"
        android:backgroundTint="@color/selector_endable_button_gray_to_black"
        android:textColor="@color/selector_endable_text_gray_to_white"
        android:textStyle="bold"
        android:enabled="false"
        android:text="다음(1/2)"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/cl_sign_password_ok_view_group"
        app:layout_constraintStart_toStartOf="@id/cl_sign_password_ok_view_group"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign_password_ok_view_group"
        style="?android:attr/borderlessButtonStyle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>