<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignupSecondActivity">

    <!--회원가입 상단 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_top_bar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/img_sign_top_bar_back_btn2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sign_top_bar_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="회원가입"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_sign_top_bar_back_btn2"
            app:layout_constraintStart_toEndOf="@+id/img_sign_top_bar_back_btn2"
            app:layout_constraintTop_toTopOf="@+id/img_sign_top_bar_back_btn2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--이름 입력 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_name_view_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign_top_bar2"
        app:layout_constraintStart_toStartOf="@id/cl_sign_top_bar2"
        app:layout_constraintEnd_toEndOf="@id/cl_sign_top_bar2"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_sign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="이름"
            android:textColor="@color/black36"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_sign_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:hint="이름을 입력해주세요"
            android:inputType="text"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="15dp"
            android:background="@color/selector_edittext_in_login_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_name"
            tools:layout_editor_absoluteX="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--비밀번호 입력 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_birth_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cl_sign_name_view_group"
        app:layout_constraintStart_toStartOf="@id/cl_sign_name_view_group"
        app:layout_constraintEnd_toEndOf="@id/cl_sign_name_view_group"
        >

        <TextView
            android:id="@+id/tv_sign_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="생일"
            android:textColor="@color/black36"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_sign_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:hint="생일을 입력해주세요"
            android:inputType="text"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="15dp"
            android:background="@color/selector_edittext_in_login_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_birth"
            tools:layout_editor_absoluteX="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign_sex_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign_birth_view_group">

        <TextView
            android:id="@+id/tv_sign_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="성별"
            android:textColor="@color/black36"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_sign_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:text="남성"
            android:background="@drawable/round_rectangle_gray_8dp"
            android:backgroundTint="@color/selector_endable_button_gray_to_black"
            android:textColor="@color/selector_endable_text_gray_to_white"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_sex"
            app:layout_constraintVertical_bias="1.0">
        </Button>

        <Button
            android:id="@+id/btn_sign_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingStart="16dp"
            android:text="여성"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:background="@drawable/round_rectangle_gray_8dp"
            android:backgroundTint="@color/selector_endable_button_gray_to_black"
            android:textColor="@color/selector_endable_text_gray_to_white"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_sign_men"
            app:layout_constraintStart_toEndOf="@+id/btn_sign_men"
            app:layout_constraintTop_toTopOf="@+id/btn_sign_men"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_signnup_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:text="회원가입(2/2)"
        android:textSize="15dp"
        android:background="@drawable/round_rectangle_gray_8dp"
        android:backgroundTint="@color/selector_endable_button_gray_to_black"
        android:textColor="@color/selector_endable_text_gray_to_white"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cl_sign_sex_view_group"
        app:layout_constraintStart_toStartOf="@id/cl_sign_sex_view_group"
        app:layout_constraintTop_toBottomOf="@+id/cl_sign_sex_view_group" />

</androidx.constraintlayout.widget.ConstraintLayout>