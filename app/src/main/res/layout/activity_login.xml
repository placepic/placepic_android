<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <!--로그인 상단 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_login_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_login_top_bar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/back_arrow_ic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_login_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="로그인"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_login_top_bar_back_btn"
            app:layout_constraintStart_toEndOf="@+id/img_login_top_bar_back_btn"
            app:layout_constraintTop_toTopOf="@+id/img_login_top_bar_back_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--이메일 입력 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_login_email_view_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_login_top_bar"
        app:layout_constraintStart_toStartOf="@id/cl_login_top_bar"
        app:layout_constraintEnd_toEndOf="@id/cl_login_top_bar"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="이메일"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/selector_edittext_in_login_view"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress"
            android:paddingVertical="12dp"
            android:paddingStart="14dp"
            android:layout_marginBottom="4dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_login_non_email"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_email"
            />

        <TextView
            android:id="@+id/tv_login_non_email"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_login_email"
            android:text="알맞은 이메일 형식이 아닙니다."
            android:textSize="11dp"
            android:textColor="@color/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_login_password_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/cl_login_email_view_group"
        app:layout_constraintStart_toStartOf="@id/cl_login_email_view_group"
        app:layout_constraintEnd_toEndOf="@id/cl_login_email_view_group"
        >

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="비밀번호"
            android:textStyle="bold"
            android:textColor="@color/black36"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/grayCED5DA"
            android:textSize="14dp"
            android:background="@color/selector_edittext_in_login_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_password"
            tools:layout_editor_absoluteX="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="26dp"
        android:text="로그인"
        android:enabled="false"
        android:textStyle="bold"
        android:textSize="15dp"
        android:background="@drawable/round_rectangle_gray_8dp"
        android:backgroundTint="@color/selector_endable_button_gray_to_black"
        android:textColor="@color/selector_endable_text_gray_to_white"
        app:layout_constraintTop_toBottomOf="@id/cl_login_password_view_group"
        app:layout_constraintStart_toStartOf="@id/cl_login_password_view_group"
        app:layout_constraintEnd_toEndOf="@id/cl_login_password_view_group"
        style="?android:attr/borderlessButtonStyle"
        />

    <TextView
        android:id="@+id/tv_login_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인에 실패하였습니다. 이메일과 비밀번호를 다시 확인해주세요."
        android:textColor="@color/colorPrimary"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />




</androidx.constraintlayout.widget.ConstraintLayout>